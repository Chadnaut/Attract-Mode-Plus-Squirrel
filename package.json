{
    "name": "am-squirrel",
    "displayName": "AM+ Squirrel",
    "description": "Squirrel for Attract-Mode Plus.",
    "version": "0.9.8",
    "license": "MIT",
    "publisher": "Chadnaut",
    "author": {
        "name": "Chadnaut",
        "url": "https://github.com/Chadnaut"
    },
    "homepage": "https://github.com/Chadnaut/Attract-Mode-Plus-Squirrel",
    "repository": {
        "type": "git",
        "url": "https://github.com/Chadnaut/Attract-Mode-Plus-Squirrel"
    },
    "bugs": {
        "url": "https://github.com/Chadnaut/Attract-Mode-Plus-Squirrel/issues"
    },
    "pricing": "Free",
    "icon": "./assets/images/banner.png",
    "galleryBanner": {
        "color": "#004499",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.69.1"
    },
    "categories": [
        "Programming Languages",
        "Formatters",
        "Linters"
    ],
    "keywords": [
        "attract-mode-plus",
        "attract-mode",
        "documentation",
        "formatter",
        "frontend",
        "layout",
        "live-reload",
        "nut",
        "squirrel",
        "syntax"
    ],
    "qna": false,
    "scripts": {
        "dev": "tsc --watch --project ./",
        "build": "tsc --build ./ --clean && tsc --project ./",
        "postbuild": "copy package*.json dist && cd dist && npm ci --omit=dev --ignore-scripts",
        "test": "jest",
        "test:watch": "jest --watchAll",
        "test:coverage": "jest --coverage --coverageDirectory ./.coverage",
        "test:watch:coverage": "jest --watchAll --coverage --coverageDirectory ./.coverage",
        "package": "vsce package",
        "vscode:prepublish": "npm run build"
    },
    "main": "./dist/extension.js",
    "activationEvents": [
        "onLanguage:squirrel",
        "onLanguage:am-log",
        "onLanguage:am-cfg",
        "onLanguage:am-file",
        "onLanguage:am-msg"
    ],
    "contributes": {
        "languages": [
            {
                "id": "squirrel",
                "aliases": [
                    "Squirrel"
                ],
                "extensions": [
                    ".nut"
                ],
                "icon": {
                    "light": "./assets/images/icon.png",
                    "dark": "./assets/images/icon.png"
                },
                "configuration": "./assets/language/language-configuration.json"
            },
            {
                "id": "am-log",
                "aliases": [
                    "Attract-Mode Log"
                ],
                "extensions": [
                    ".log"
                ],
                "firstLine": "Attract-Mode",
                "configuration": "./assets/language/language-configuration.json"
            },
            {
                "id": "am-cfg",
                "aliases": [
                    "Attract-Mode Config"
                ],
                "extensions": [
                    ".cfg"
                ],
                "firstLine": "# Generated by Attract-Mode"
            },
            {
                "id": "am-file",
                "aliases": [
                    "Attract-Mode File"
                ],
                "extensions": [
                    ".am"
                ]
            },
            {
                "id": "am-msg",
                "aliases": [
                    "Attract-Mode Translation"
                ],
                "extensions": [
                    ".msg"
                ],
                "firstLine": "#@[^\n]+"
            }
        ],
        "grammars": [
            {
                "language": "squirrel",
                "scopeName": "source.nut",
                "path": "./assets/grammars/squirrel.tmLanguage.json"
            },
            {
                "language": "am-log",
                "scopeName": "source.log",
                "path": "./assets/grammars/log.tmLanguage.json"
            },
            {
                "language": "am-cfg",
                "scopeName": "source.cfg",
                "path": "./assets/grammars/cfg.tmLanguage.json"
            },
            {
                "language": "am-msg",
                "scopeName": "source.msg",
                "path": "./assets/grammars/msg.tmLanguage.json"
            },
            {
                "language": "am-file",
                "scopeName": "source.am",
                "path": "./assets/grammars/am.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "AM+ Squirrel",
            "properties": {
                "AM-Squirrel.languageSupport": {
                    "order": 1,
                    "type": "object",
                    "markdownDescription": "Controls the language features. Some options require [suggestions](#editor.suggest.showClasses), [snippets](#editor.suggest.showSnippets), [inlayHints](#editor.inlayHints.enabled), or [hover](#editor.hover.enabled) to be enabled.",
                    "additionalProperties": false,
                    "properties": {
                        "showProblems": {
                            "type": "boolean",
                            "description": "Problem detection."
                        },
                        "showHoverDefinitions": {
                            "type": "boolean",
                            "description": "Hover definitions."
                        },
                        "showHoverImages": {
                            "type": "boolean",
                            "description": "Hover image preview."
                        },
                        "hoverVideoAutoplay": {
                            "type": "boolean",
                            "description": "Hover video autoplay."
                        },
                        "showColor": {
                            "type": "boolean",
                            "description": "Colour picker."
                        },
                        "showDocumentLinks": {
                            "type": "boolean",
                            "description": "Document links."
                        },
                        "dropEditEnabled": {
                            "type": "boolean",
                            "description": "Dropped files insert import scripts."
                        },
                        "showSnippets": {
                            "type": "boolean",
                            "description": "Snippets."
                        },
                        "showInlayHints": {
                            "type": "boolean",
                            "description": "Inlay hints."
                        }
                    },
                    "default": {
                        "showProblems": true,
                        "showHoverDefinitions": true,
                        "showHoverImages": true,
                        "hoverVideoAutoplay": true,
                        "showColor": true,
                        "showDocumentLinks": true,
                        "dropEditEnabled": true,
                        "showSnippets": true,
                        "showInlayHints": false
                    }
                },
                "AM-Squirrel.completions": {
                    "order": 2,
                    "type": "object",
                    "markdownDescription": "Controls the completions that appear while typing.",
                    "additionalProperties": false,
                    "properties": {
                        "showCompletions": {
                            "type": "boolean",
                            "description": "Code completions."
                        },
                        "showDocBlock": {
                            "type": "boolean",
                            "description": "DocBlock completions."
                        },
                        "showSquirrel": {
                            "type": "boolean",
                            "description": "Squirrel language completions."
                        },
                        "showAttractMode": {
                            "type": "boolean",
                            "description": "Attract-Mode API completions."
                        }
                    },
                    "default": {
                        "showCompletions": true,
                        "showDocBlock": true,
                        "showSquirrel": true,
                        "showAttractMode": true
                    }
                },
                "AM-Squirrel.codeFormatting.style": {
                    "order": 3,
                    "type": "object",
                    "markdownDescription": "Controls the `Format Document` styling.",
                    "additionalProperties": false,
                    "properties": {
                        "objectCurlySpacing": {
                            "type": "boolean",
                            "description": "Spaces between curly braces."
                        },
                        "arrayBracketSpacing": {
                            "type": "boolean",
                            "description": "Spaces between array brackets."
                        },
                        "computedPropertySpacing": {
                            "type": "boolean",
                            "description": "Spaces between computed property brackets."
                        },
                        "spaceInParens": {
                            "type": "boolean",
                            "description": "Spaces between parentheses."
                        },
                        "attrSpacing": {
                            "type": "boolean",
                            "description": "Spaces between attribute operator."
                        },
                        "semi": {
                            "type": "boolean",
                            "description": "Add a semicolon at the end of every line."
                        },
                        "useTabs": {
                            "type": "boolean",
                            "description": "Indent lines with tabs."
                        }
                    },
                    "default": {
                        "objectCurlySpacing": true,
                        "arrayBracketSpacing": false,
                        "computedPropertySpacing": false,
                        "spaceInParens": false,
                        "attrSpacing": false,
                        "semi": true,
                        "useTabs": false
                    }
                },
                "AM-Squirrel.codeFormatting.braces": {
                    "order": 4,
                    "type": "string",
                    "enum": [
                        "1tbs",
                        "stroustrup",
                        "allman"
                    ],
                    "enumItemLabels": [
                        "One true brace style",
                        "Stroustrup",
                        "Allman"
                    ],
                    "markdownEnumDescriptions": [
                        "Opening brace on the same line as its statement.",
                        "Place `else` statements on a new line.",
                        "All braces on new lines."
                    ],
                    "default": "1tbs",
                    "markdownDescription": "Controls the format of braces relative to their statements."
                },
                "AM-Squirrel.codeFormatting.tabWidth": {
                    "order": 5,
                    "type": "integer",
                    "default": 4,
                    "minimum": 0,
                    "markdownDescription": "Number of spaces to use per tab."
                },
                "AM-Squirrel.codeFormatting.printWidth": {
                    "order": 6,
                    "type": "integer",
                    "default": 80,
                    "minimum": 10,
                    "markdownDescription": "Fit code within this line limit."
                },
                "AM-Squirrel.attract-Mode.path": {
                    "order": 7,
                    "type": "string",
                    "markdownDescription": "Path of your AM+ installation, containing the `modules`, `plugins` and `layouts` folders."
                },
                "AM-Squirrel.attract-Mode.artwork": {
                    "order": 8,
                    "type": "string",
                    "default": "snap,marquee,flyer,wheel",
                    "markdownDescription": "Labels to display for artwork resource completions."
                },
                "AM-Squirrel.attract-Mode.integration": {
                    "order": 9,
                    "type": "object",
                    "markdownDescription": "Controls the integration with Attract-Mode.",
                    "additionalProperties": false,
                    "properties": {
                        "liveReload": {
                            "type": "boolean",
                            "description": "Live reload AM+ on document save."
                        },
                        "logEnabled": {
                            "type": "boolean",
                            "description": "Display `last_run.log` contents in the output panel."
                        },
                        "showMissing": {
                            "type": "boolean",
                            "description": "Show missing files (requires Problem detection)."
                        },
                        "scanArtwork": {
                            "type": "boolean",
                            "description": "Scan config for artwork resource completions."
                        }
                    },
                    "default": {
                        "liveReload": false,
                        "logEnabled": true,
                        "showMissing": true,
                        "scanArtwork": true
                    }
                },
                "AM-Squirrel.attract-Mode.liveReloadExtensions": {
                    "order": 10,
                    "type": "string",
                    "default": ".nut;.frag;.vert;.cfg;.am;.msg",
                    "markdownDescription": "Extensions that trigger AM+ live reload when saved."
                },
                "AM-Squirrel.checkConflicts": {
                    "order": 11,
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Check for conflicting extensions on startup."
                },
                "AM-Squirrel.package.author": {
                    "order": 12,
                    "type": "string",
                    "default": "username",
                    "markdownDescription": "Author for DocBlock package completions."
                },
                "AM-Squirrel.package.url": {
                    "order": 13,
                    "type": "string",
                    "default": "https://github.com/user/repo",
                    "markdownDescription": "URL for DocBlock package completions."
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "attractBar",
                    "title": "Attract-Mode",
                    "icon": "./assets/images/attract.png"
                }
            ]
        },
        "views": {
            "attractBar": [
                {
                    "id": "attractModuleExplorer",
                    "name": "Modules"
                }
            ]
        },
        "commands": [
            {
                "command": "attractModuleExplorer.refresh",
                "title": "Refresh",
                "icon": "$(refresh)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "attractModuleExplorer.refresh",
                    "when": "view == attractModuleExplorer",
                    "group": "navigation"
                }
            ]
        }
    },
    "devDependencies": {
        "@prettier/sync": "^0.5.2",
        "@types/jest": "^29.5.14",
        "@types/vscode": "=1.69.1",
        "jest": "^29.7.0",
        "jest-mock-vscode": "^4.1.0",
        "ts-jest": "^29.2.6",
        "typescript": "^5.7.3"
    },
    "overrides": {
        "@types/vscode": "=1.69.1"
    },
    "dependencies": {
        "jest-docblock": "^29.7.0",
        "leather": "^3.0.3",
        "prettier": "^3.5.2",
        "tail": "^2.2.6",
        "to-fast-properties": "=3.0.1"
    }
}
