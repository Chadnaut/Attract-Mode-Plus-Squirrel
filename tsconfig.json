{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "strict": false,
        "esModuleInterop": true,
        "allowJs": true,
        "isolatedModules": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "**/.work"
    ],
}
