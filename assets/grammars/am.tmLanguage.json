{
    "name": "am-state",
    "scopeName": "source.am",
    "patterns": [
		{
			"include": "#statements"
		}
	],
	"repository": {
        "statements": {
            "patterns": [
                {
                    "match": "([^;]*)(;)",
                    "captures": {
                        "1": {
                            "patterns": [
                                {
                                    "include": "#literals"
                                },
                                {
                                    "include": "#string"
                                }
                            ]
                        },
                        "2": {
                            "name": "keyword.am"
                        }
                    }
                }
            ]
        },
        "string": {
            "patterns": [
                {
                    "match": "[^,]+",
                    "name": "string.am"
                }
            ]
        },
        "literals": {
            "patterns": [
                {
                    "match": "\\b([0-9]+)\\b",
                    "name": "constant.language.am"
                }
            ]
        }
    }
}
